<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_selected="false" n1:state_pressed="false"
      xmlns:n1="http://schemas.android.com/apk/res/android">
        <layer-list>
            <item n1:left="-5.0dip" n1:top="-5.0dip" n1:right="-5.0dip">
                <shape n1:shape="rectangle">
                    <stroke n1:width="2.0dip" n1:color="@color/border" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item n2:state_selected="true" n2:state_pressed="false"
      xmlns:n2="http://schemas.android.com/apk/res/android">
        <layer-list>
            <item n2:left="-5.0dip" n2:top="-5.0dip" n2:right="-5.0dip">
                <shape n2:shape="rectangle">
                    <stroke n2:width="4.0dip" n2:color="@color/highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item n3:state_pressed="true"
      xmlns:n3="http://schemas.android.com/apk/res/android">
        <layer-list>
            <item>
                <shape n3:shape="rectangle">
                    <solid n3:width="4.0dip" n3:color="@color/highlight" />
                </shape>
            </item>
            <item n3:left="-5.0dip" n3:top="-5.0dip" n3:right="-5.0dip">
                <shape n3:shape="rectangle">
                    <stroke n3:width="4.0dip" n3:color="@color/highlight" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>